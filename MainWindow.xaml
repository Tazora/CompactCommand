        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="30" VerticalAlignment="Top" Width="80" Margin="214,127,0,0" TextChanged="textBox_TextChanged"/>
        <Label x:Name="label" Content="Minuten zum Herunterfahren" HorizontalAlignment="Left" Margin="177,87,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="228,178,0,0" TextWrapping="Wrap" Text="Restdauer" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="Restdauer" HorizontalAlignment="Left" Margin="228,152,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.235,-0.128"/>

    </Grid>
</Window>
